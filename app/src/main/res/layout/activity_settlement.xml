<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settlement_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.SettlementActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"

        app:title="@string/app_name"
        app:titleTextColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:gravity="center|start"
                android:text="Nhập số điện: "
                android:textColor="#F57F17"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/soDien"
                android:layout_width="155dp"
                android:layout_height="50dp"
                android:gravity="start|center"
                android:hint="Số điện"
                android:inputType="numberSigned"
                android:textColor="#F57F17"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:gravity="center|start"
                android:text="Nhập số nước: "
                android:textColor="#0000FF"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/soNuoc"
                android:layout_width="155dp"
                android:layout_height="50dp"
                android:gravity="start|center"
                android:hint="Số nước"
                android:inputType="numberSigned"
                android:textColor="#0000FF"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/quyetToan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Quyết toán"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/thanhToan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Thanh toán tiền phòng"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="TỔNG QUAN"
                    android:textColor="#1E2069"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="Phòng 402"
                    android:textColor="#2196F3"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/report_menu"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/txtDien"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="start|center"
                        android:text="Điện: "
                        android:textColor="#43A047"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/report_menu"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/txtNuoc"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="start|center"
                        android:text="Nước: "
                        android:textColor="#43A047"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/report_menu"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/txtDcc"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="start|center"
                        android:text="Vệ sinh + Điện công cộng: "
                        android:textColor="#43A047"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/report_menu"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/txtMang"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="start|center"
                        android:text="Mạng: "
                        android:textColor="#43A047"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/report_menu"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/txtDieuhoa"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="start|center"
                        android:text="Bảo dưỡng điều hòa: "
                        android:textColor="#43A047"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/report_menu"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/txtTienPhong"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="start|center"
                        android:text="Tiền phòng: "
                        android:textColor="#43A047"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txtPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Tổng tiền"
                    android:textColor="#2196F3"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/report_menu"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/txtTong"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="start|center"
                        android:text="Tổng: "
                        android:textColor="#43A047"
                        android:textSize="23sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>