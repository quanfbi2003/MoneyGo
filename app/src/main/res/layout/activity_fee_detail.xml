<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.FeeDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"

        app:title="@string/app_name"
        app:titleTextColor="@color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Tháng 7/2021"
                android:textColor="@color/purple_500"
                android:textSize="35sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="25dp"
                        android:gravity="start"
                        android:text="Tiền phòng:"
                        android:textColor="#E53935"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="25dp"
                        android:gravity="start"
                        android:text="Tiền điện/số:"
                        android:textColor="#E53935"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="25dp"
                        android:gravity="start"
                        android:text="Tiền nước/số:"
                        android:textColor="#E53935"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="25dp"
                        android:gravity="start"
                        android:text="Tiền mạng:"
                        android:textColor="#E53935"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="25dp"
                        android:gravity="start"
                        android:text="Tiền mạng HX:"
                        android:textColor="#E53935"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="25dp"
                        android:gravity="start"
                        android:text="Tiền VS+ DCC:"
                        android:textColor="#E53935"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="25dp"
                        android:gravity="start"
                        android:text="Tiền điều hoà:"
                        android:textColor="#E53935"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="25dp"
                        android:gravity="start"
                        android:text="Số người:"
                        android:textColor="#E53935"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tienPhong"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="25dp"
                        android:gravity="start"
                        android:text="2,000,000 đ"
                        android:textColor="@color/purple_500"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tienDien"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="25dp"
                        android:gravity="start"
                        android:text="4,000 đ"
                        android:textColor="@color/purple_500"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tienNuoc"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="25dp"
                        android:gravity="start"
                        android:text="20,000 đ"
                        android:textColor="@color/purple_500"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tienMang"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="25dp"
                        android:gravity="start"
                        android:text="100,000 đ"
                        android:textColor="@color/purple_500"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tienMangHangXom"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="25dp"
                        android:gravity="start"
                        android:text="50,0000 đ"
                        android:textColor="@color/purple_500"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tienVS"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="25dp"
                        android:gravity="start"
                        android:text="80,000 đ"
                        android:textColor="@color/purple_500"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tienDieuHoa"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="25dp"
                        android:gravity="start"
                        android:text="0 đ"
                        android:textColor="@color/purple_500"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/soNguoi"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="25dp"
                        android:gravity="start"
                        android:text="4"
                        android:textColor="@color/purple_500"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
